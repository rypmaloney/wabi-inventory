extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
        label(for='name') Item Name:
        input#name.form-control(type='text', placeholder='' name='name' value=(undefined===category ? '' : category.name))
    div.form-group        
        label(for='type') Category:
        select#name.form-control(name='type')
            each category in category_list
                option(value=category.name) #{category.name}

            else
                p There are no items.
    div.form-group
        label(for='description') Description:
        input#name.form-control(type='text', placeholder='Short description.' name='description' value=(undefined===category ? '' : category.description))
        button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg