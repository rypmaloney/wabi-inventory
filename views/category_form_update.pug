extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
        label(for='name') Category Name:
        br
        input#name.form-control(type='text', placeholder='New category name' name='name' value=(undefined===category ? '' : category.name))
    div.form-group        
        label(for='type') Type:
        br
        select#name.form-control(name='type' )
            option(value="Bike" selected=(category.type==='Bike' ? 'selected' : false)) Bike
            option(value="Component" selected=(category.type==='Component' ? 'selected' : false)) Component
            option(value="Accessory" selected=(category.type==='Accessory' ? 'selected' : false)) Accessory
    div.form-group
        label(for='description') Description:
        br
        textarea#name.form-control(cols="40", rows="4" type='text', placeholder='Short description.' name='description') #{undefined===category ? '' : `${category.description}`}
    button.btn.btn-primary(type='submit') Submit


  if errors
   ul
    for error in errors
     li!= error.msg