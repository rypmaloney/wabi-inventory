extends layout

block content
  div.detail
    h1=title 
    p.biline #{category.type}
    p.description #{category.description}

    div.list
        each item in items_in_category
            div.list-item
                a(href=item.url) #{item.name}
                |  (#{item.stock} in stock)

        else
            p There are no items.